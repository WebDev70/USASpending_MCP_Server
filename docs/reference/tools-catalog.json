      "returns": {
        "total_sections": "210 (35 + 54 + 41 + 80)",
        "sections_by_part": {
          "part14": "35 sections (Sealed Bidding)",
          "part15": "54 sections (Contracting by Negotiation)",
          "part16": "41 sections (Types of Contracts)",
          "part19": "80 sections (Small Business Programs)"
        },
        "sections_by_subpart": "organized list of all FAR sections grouped by part and subpart"
      },
      "note": "Provides comprehensive index of all 210 sections across 4 FAR parts with descriptions and subpart organization"
