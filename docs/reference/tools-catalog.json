{
  "version": "1.0",
  "last_updated": "2025-11-25",
  "description": "Comprehensive catalog of MCP tools available in the USASpending server with FAR regulatory tools",
  "server_info": {
    "name": "USASpending MCP Server with Multi-Part FAR Tools",
    "version": "2.2.0",
    "base_url": "https://api.usaspending.gov/api/v2",
