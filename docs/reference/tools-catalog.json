    "lookup_far_section": {
      "name": "lookup_far_section",
      "category": "regulatory",
      "priority": "high",
      "description": "Look up a specific FAR (Federal Acquisition Regulation) section by number from Parts 14, 15, 16, or 19",
      "data_source": "docs/far_part14.json, docs/far_part15.json, docs/far_part16.json, docs/far_part19.json",
      "supported_parts": {
        "14": "Sealed Bidding (35 sections)",
        "15": "Contracting by Negotiation (54 sections)",
        "16": "Types of Contracts (41 sections)",
        "19": "Small Business Programs (80 sections)"
      },
      "target_users": "Procurement professionals, contract managers, government agencies",
      "parameters": {
        "section_number": {
          "type": "string",
          "required": true,
          "description": "FAR section number (auto-detects part from prefix)",
          "examples": ["14.305", "15.404", "16.201", "19.305"]
        }
      },
      "returns": {
        "section_title": "string",
        "section_content": "string (up to 2000 characters)",
        "part_number": "integer (14, 15, 16, or 19)",
        "related_sections": "list of related section numbers from same part"
      },
      "note": "Section number prefix automatically determines which part is searched (e.g., 16.201 looks in Part 16)"
    },
    "search_far": {
      "name": "search_far",
      "category": "regulatory",
      "priority": "high",
      "description": "Search FAR Parts 14, 15, 16, and 19 by keywords or topics with relevance scoring across all parts",
      "data_source": "docs/far_part14.json, docs/far_part15.json, docs/far_part16.json, docs/far_part19.json",
      "search_scope": "Cross-part search spanning all 4 parts (210 total sections)",
      "target_users": "Procurement professionals, contract managers, government agencies",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search keywords applicable across all FAR parts",
          "examples": [
            "proposal evaluation (Part 15)",
            "small business (Part 19)",
            "cost reimbursement (Part 16)",
            "sealed bidding (Part 14)"
          ]
        }
      },
      "returns": {
        "matching_sections": "list of FAR sections from all parts matching search query",
        "part_designation": "which part each result comes from",
        "relevance_score": "0-11 (title matches weighted 10x higher than content)",
        "top_match_details": "full content excerpt from highest-scoring section with part info"
      },
      "note": "Searches across all available parts simultaneously. Results organized by relevance score, then section number."
    },
    "list_far_sections": {
      "name": "list_far_sections",
