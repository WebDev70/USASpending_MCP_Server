  "tools": {
    "search_federal_awards": {
      "name": "search_federal_awards",
      "category": "search",
      "priority": "high",
      "description": "Search federal spending data from USASpending.gov to find contracts, grants, loans, and other federal awards",
      "usaspending_endpoint": "/search/spending_by_award/",
      "http_method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search query with advanced syntax. Can include keywords, agencies, dates, amounts",
          "examples": [
            "software development",
            "NASA contracts",
            "healthcare grants 2024"
          ]
        },
        "max_results": {
          "type": "integer",
          "required": false,
          "default": 5,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of results to return"
        },
        "output_format": {
          "type": "string",
          "required": false,
          "default": "text",
          "enum": ["text", "csv"],
          "description": "Output format for results"
        },
        "start_date": {
          "type": "string",
          "required": false,
          "format": "YYYY-MM-DD",
          "description": "Search start date (defaults to 180 days ago)"
        },
        "end_date": {
          "type": "string",
          "required": false,
          "format": "YYYY-MM-DD",
          "description": "Search end date (defaults to today)"
        }
      },
      "response_fields": [
        "Award ID",
        "Recipient Name",
        "Award Amount",
        "Award Type",
        "Description",
        "Agency",
        "Award Date"
      ],
      "response_example": {
        "Found": 29296,
        "Results": [
          {
            "Award ID": "W91ZRU25FA004",
            "Recipient Name": "DELL FEDERAL SYSTEMS L.P",
            "Amount": "$20.96K",
            "Type": "Contract",
            "Description": "DELL PRO 16 PLUS NOTEBOOKS"
          }
        ]
      },
      "known_issues": [
        "Keyword search may return broad results",
        "Masked Award IDs (ZZ71, ZZZZ) indicate test/incomplete data",
        "Results limited to past 6 years"
      ],
      "workarounds": [
        "Use specific keywords combined with date ranges",
        "Filter by agency for more targeted results",
        "Use exact Award ID for precise lookups"
      ],
      "performance": {
        "typical_response_time_ms": "150-500",
        "average_latency": "300ms"
      }
    },
