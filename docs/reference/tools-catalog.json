    "get_spending_trends": {
      "name": "get_spending_trends",
      "category": "analytics",
      "priority": "high",
      "description": "Analyze federal spending trends over time by fiscal year, calendar year, month, or quarter",
      "usaspending_endpoint": "/search/spending_over_time/",
      "http_method": "POST",
      "parameters": {
        "period": {
          "type": "string",
          "required": false,
          "default": "fiscal_year",
          "enum": ["fiscal_year", "calendar_year", "month", "quarter"],
          "description": "Time period grouping"
        },
        "agency": {
          "type": "string",
          "required": false,
          "default": "",
          "description": "Filter by agency (e.g., 'dod', 'gsa', 'hhs', 'va', 'dhs')",
          "examples": ["dod", "defense", "gsa"]
        },
        "award_type": {
          "type": "string",
          "required": false,
          "default": "",
          "enum": ["A", "B", "C", "D"],
          "description": "Filter by award type code"
        }
      },
      "api_payload_template": {
        "filters": {
          "time_period": [
            {
              "start_date": "YYYY-MM-DD",
              "end_date": "YYYY-MM-DD"
            }
          ],
          "agencies": ["Optional: agency name"]
        },
        "group": "fiscal_year|calendar_year|month|quarter"
      },
      "response_fields": [
        "time_period",
        "aggregated_amount",
        "Contract_Obligations",
        "Direct_Obligations",
        "Grant_Obligations",
        "Idv_Obligations",
        "Loan_Obligations",
        "Other_Obligations"
      ],
      "response_example": {
        "FY2024": {
          "total": "$4,944.60B",
          "breakdown": {
            "Contracts": "$740.22B",
            "Direct": "$2,941.93B",
            "Grants": "$1,209.75B"
          }
        }
      },
      "known_issues": [
        "Field names in API response use underscores (total_spending), not camelCase",
        "Required parameter is 'group' not 'group_by'"
      ],
      "workarounds": [
        "Use 'group' parameter instead of 'group_by'",
        "Access response fields as: total_spending, award_count, period"
      ],
      "performance": {
        "typical_response_time_ms": "300-1000"
      }
    },
